datasource db {
    provider = "postgresql"
    url = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
    binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

model User {
    id Int @id @unique @default(autoincrement())
    cpf String @unique @db.VarChar(11)
    email String @unique
    name String @db.VarChar(100)
    phone String @db.VarChar(15)
    passwordHash String @map("password_hash")
    role Role
    createdAt DateTime @default(now()) @map("created_at")
    updatedAt DateTime @updatedAt @map("updated_at")

    elderProfile ElderProfile?
    caregiverProfile CaregiverProfile?
    pushToken PushToken[]

    @@map("user")
}

model ElderProfile {
    userId Int @unique @map("user_id")
    user User @relation(fields: [userId], references: [id], onDelete: Cascade)
    
    caregiverId Int? @unique @map("caregiver_id")
    caregiver CaregiverProfile? @relation(fields: [caregiverId], references: [userId], onDelete: SetNull)

    deviceId String? @unique @db.VarChar(8) @map("device_id")

    bpm Int?
    createdAt DateTime @default(now()) @map("created_at")
    updatedAt DateTime @updatedAt @map("updated_at")

    @@map("elder_profile")
}

model CaregiverProfile {
    userId Int @unique @map("user_id")
    user User @relation(fields: [userId], references: [id], onDelete: Cascade)

    elder ElderProfile?

    createdAt DateTime @default(now()) @map("created_at")

    @@map("caregiver_profile")
}

model PushToken {
    id Int @unique @default(autoincrement())
    userId Int @unique @map("user_id")
    user User? @relation(fields: [userId], references: [id], onDelete: Cascade)
    
    expoTokenPush String @unique @map("expo_token_push")
    platform Platform
    osVersion String @map("os_version")
    
    createdAt DateTime @default(now()) @map("created_at")
    updatedAt DateTime @updatedAt @map("updated_at")

    lastActiveAt DateTime? @map("last_active_at")
    lastSentAt DateTime? @map("last_sent_at")

    @@index([userId])
    @@index([lastActiveAt])

    @@map("push_token")
}

enum Role {
    elder
    caregiver
    admin
}

enum Platform {
    ios
    android
}
